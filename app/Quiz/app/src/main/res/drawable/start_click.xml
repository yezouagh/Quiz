<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:state_focused="true"
    android:state_pressed="false"
    android:drawable="@drawable/rounded_withborder_layout"
    />
    <item
        android:state_focused="true"
        android:state_pressed="true"
        >
        <shape>
            <corners android:radius="10dp"/>
            <stroke
                android:width="0.8dp"
                android:color="#fff"/>
            <gradient
                android:endColor="#ff367db7"
                android:startColor="#449def"
                android:angle="270"
                android:type="linear"/>
        </shape>
    </item>
    <item
        android:state_focused="false"
        android:state_pressed="true"
       >
        <shape>
            <corners android:radius="10dp"/>
        <stroke
            android:width="0.8dp"
            android:color="#fff"/>
        <gradient
            android:endColor="#ff367db7"
            android:startColor="#449def"
            android:angle="270"
            android:type="linear"/>
    </shape>
    </item>
    <item
    android:state_focused="false"
    android:state_pressed="false"
        android:state_selected="false"
    android:drawable="@drawable/rounded_withborder_layout"
    />
    <item
        android:drawable="@drawable/rounded_withborder_layout"
        />
</selector>
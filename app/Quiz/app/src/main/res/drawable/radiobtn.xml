<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <corners
                android:radius="10dp">
            </corners>
            <stroke
                android:width="0.8dp"
                android:color="#fff"/>
            <gradient
                android:endColor="#FF1C5FAB"
                android:startColor="#FF2394FF"
                android:angle="270"
                android:type="linear"/>
    </shape>
    </item>
    <item android:state_checked="false" android:drawable="@drawable/rounded_withborder_layout"/>
</selector>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ezouagh.quiz.SettingsActivity"
    android:id="@+id/screenGlobal">
    <TableRow
    android:layout_width="match_parent"
    android:layout_height="6dp"
    android:background="#ffff6b38"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/SettingsActivityScrollView"
        android:background="#FFF7F7F7">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="ezouagh.quiz.SettingsActivity"
            android:background="#FFF7F7F7">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_start_material"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                    android:text="@string/general"
                    android:layout_marginLeft="@dimen/abc_button_inset_vertical_material"
                    android:layout_marginStart="@dimen/abc_button_inset_vertical_material"
                    android:lines="1"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
                    />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:background="@color/abc_input_method_navigation_guard"/>
                </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
                style="@style/Base.V7.Widget.AppCompat.AutoCompleteTextView"
                android:id="@+id/Language"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/rectangle_withborder_layout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/Language"
                    android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginStart="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:lines="1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/abc_text_size_title_material"
                    android:typeface="monospace"
                    android:textColor="#ff494949" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                    android:text="@string/English"
                    android:id="@+id/LanguageTXT"
                    android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginStart="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:textColor="#ff777777" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_start_material"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                    android:text="@string/userinfo"
                    android:layout_marginLeft="@dimen/abc_button_inset_vertical_material"
                    android:layout_marginStart="@dimen/abc_button_inset_vertical_material"
                    android:lines="1"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
                    />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:background="@color/abc_input_method_navigation_guard"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
                style="@style/Base.V7.Widget.AppCompat.AutoCompleteTextView"
                android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_start_material"
                android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_start_material">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/FullName"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginStart="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:lines="1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/abc_text_size_title_material"
                    android:typeface="monospace"
                    android:textColor="#ff494949" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                    android:text="@string/FullName"
                    android:id="@+id/FullnameTXT"
                    android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginStart="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:textColor="#ff777777" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
                style="@style/Base.V7.Widget.AppCompat.AutoCompleteTextView"
                android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_start_material"
                android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_start_material">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/BirthDay"
                    android:id="@+id/textView8"
                    android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginStart="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:lines="1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/abc_text_size_title_material"
                    android:typeface="monospace"
                    android:textColor="#ff494949" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                    android:text="@string/BirthDay"
                    android:id="@+id/BirthdayTXT"
                    android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginStart="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:textColor="#ff777777" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
                style="@style/Base.V7.Widget.AppCompat.AutoCompleteTextView"
                android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_start_material"
                android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_start_material">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/Email"
                    android:id="@+id/textView10"
                    android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginStart="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:lines="1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/abc_text_size_title_material"
                    android:typeface="monospace"
                    android:textColor="#ff494949" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                    android:text="@string/Email"
                    android:id="@+id/EmailTXT"
                    android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginStart="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:textColor="#ff777777" />
            </LinearLayout>
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/abc_action_bar_default_padding_material">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
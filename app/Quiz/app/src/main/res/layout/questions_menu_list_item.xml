<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingTop="7dp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:paddingBottom="5dp"
              android:background="@drawable/question_click">

    <LinearLayout
        android:layout_width="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:layout_height="match_parent"
        android:id="@+id/ReviewListItem"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/review_round"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/notification_subtext_size"
        android:layout_marginTop="@dimen/notification_subtext_size"
        android:layout_marginBottom="@dimen/notification_subtext_size"
        android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Menu_lblListItem"
        android:layout_marginRight="@dimen/notification_subtext_size"
        android:layout_marginEnd="@dimen/notification_subtext_size"
        android:layout_marginStart="@dimen/notification_subtext_size"
        android:singleLine="true"
        android:typeface="normal"
        android:layout_marginLeft="@dimen/notification_subtext_size"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textColor="#fff1f1f1"
        android:textIsSelectable="false"
        />

</LinearLayout>
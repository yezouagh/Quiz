<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ezouagh.quiz.Account">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/AppnameColor"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/AccountScrollView"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="ezouagh.quiz.Account">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:id="@+id/cancelBN"
                    android:layout_weight="1"
                    android:background="@color/bright_foreground_material_dark" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/AppnameColor" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Done"
                    android:id="@+id/doneBTN"
                    android:layout_weight="1"
                    android:background="@color/bright_foreground_material_dark" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/AppnameColor"/>
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/abc_button_inset_vertical_material">
            </com.google.android.gms.ads.AdView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.V7.Widget.AppCompat.AutoCompleteTextView"
                android:layout_marginLeft="@dimen/abc_dialog_padding_top_material"
                android:layout_marginRight="@dimen/abc_dialog_padding_top_material"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:background="@drawable/semi_rounded_withborder_layout"
                android:paddingLeft="@dimen/abc_action_bar_overflow_padding_start_material"
                android:paddingRight="@dimen/abc_action_bar_overflow_padding_start_material"
                android:paddingTop="@dimen/abc_control_inset_material"
                android:id="@+id/changeFullName"
                android:focusable="false"
                android:focusableInTouchMode="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/FullName"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:lines="1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:typeface="monospace"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginTop="@dimen/abc_control_inset_material" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                    android:text="@string/FullName"
                    android:id="@+id/FullnameTXT"
                    android:layout_marginTop="@dimen/abc_control_corner_material"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginBottom="@dimen/abc_dialog_list_padding_vertical_material"
                    android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginStart="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:singleLine="true"
                    android:textSize="@dimen/abc_text_size_button_material"
                    android:textColor="#aab" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.V7.Widget.AppCompat.AutoCompleteTextView"
                android:layout_marginLeft="@dimen/abc_dialog_padding_top_material"
                android:layout_marginRight="@dimen/abc_dialog_padding_top_material"
                android:background="@drawable/rectangle_withborder_layout"
                android:paddingLeft="@dimen/abc_action_bar_overflow_padding_start_material"
                android:paddingRight="@dimen/abc_action_bar_overflow_padding_start_material"
                android:paddingTop="@dimen/abc_control_inset_material"
                android:id="@+id/changeBirthDay"
                android:focusable="false"
                android:focusableInTouchMode="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/BirthDay"
                    android:id="@+id/textView8"
                    android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:lines="1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:typeface="monospace"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginTop="@dimen/abc_control_inset_material" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                    android:text="@string/BirthDay"
                    android:id="@+id/BirthdayTXT"
                    android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginStart="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginBottom="@dimen/abc_dialog_list_padding_vertical_material"
                    android:singleLine="true"
                    android:textSize="@dimen/abc_text_size_button_material"
                    android:layout_marginTop="@dimen/abc_control_corner_material"
                    android:textColor="#aab" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.V7.Widget.AppCompat.AutoCompleteTextView"
                android:layout_marginLeft="@dimen/abc_dialog_padding_top_material"
                android:layout_marginRight="@dimen/abc_dialog_padding_top_material"
                android:background="@drawable/rectangle_withborder_layout"
                android:paddingLeft="@dimen/abc_action_bar_overflow_padding_start_material"
                android:paddingRight="@dimen/abc_action_bar_overflow_padding_start_material"
                android:paddingTop="@dimen/abc_control_inset_material"
                android:id="@+id/changeEmail"
                android:focusable="false"
                android:focusableInTouchMode="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/Email"
                    android:id="@+id/textView10"
                    android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:lines="1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:typeface="monospace"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginStart="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginTop="@dimen/abc_control_inset_material" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                    android:text="@string/Email"
                    android:id="@+id/EmailTXT"
                    android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginStart="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginTop="@dimen/abc_control_corner_material"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_end_material"
                   android:layout_marginBottom="@dimen/abc_dialog_list_padding_vertical_material"
                    android:singleLine="true"
                    android:textSize="@dimen/abc_text_size_button_material"
                    android:textColor="#aab" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.V7.Widget.AppCompat.AutoCompleteTextView"
                android:layout_marginLeft="@dimen/abc_dialog_padding_top_material"
                android:layout_marginRight="@dimen/abc_dialog_padding_top_material"
                android:layout_marginEnd="@dimen/abc_dialog_padding_top_material"
                android:layout_marginStart="@dimen/abc_dialog_padding_top_material"
                android:background="@drawable/semi_rounded_inverse_layout"
                android:paddingLeft="@dimen/abc_action_bar_overflow_padding_start_material"
                android:paddingRight="@dimen/abc_action_bar_overflow_padding_start_material"
                android:paddingTop="@dimen/abc_control_inset_material"
                android:id="@+id/changePass"
                android:focusable="false"
                android:focusableInTouchMode="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/Pass"
                    android:id="@+id/textView12"
                    android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginStart="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:lines="1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:typeface="monospace"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginTop="@dimen/abc_control_inset_material" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                    android:text="@string/Pass"
                    android:id="@+id/PassTXT"
                    android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_marginTop="@dimen/abc_control_corner_material"
                    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginBottom="@dimen/abc_dialog_list_padding_vertical_material"
                    android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_end_material"
                    android:layout_marginStart="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:password="true"
                    android:singleLine="true"
                    android:textSize="@dimen/abc_text_size_button_material"
                    android:textColor="#aab" />
            </LinearLayout>
            <com.google.android.gms.ads.AdView
            android:id="@+id/adView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material">
        </com.google.android.gms.ads.AdView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>